# magrit status

function help {
	cat <<__HELP__
usage: magrit status <commit>
__HELP__
}

if [ $# -gt 0 ]; then
	if [ $1 = "-h" -o $1 = "--help" ]; then
		help
		exit 0
	fi
fi

source utils

_checkSsh
repo=${_target[$_REPO]}

revstr="HEAD"
if [ $# -gt 0 ]; then
	revstr=$1
fi

commit=$(git rev-parse $revstr)

status=$(_sendSshCommand magrit status $repo $commit)

echo "# $(git log --color=$_colorAction -1 --oneline $commit)"
echo "$(_colorizeStatus $status)"
